<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cliníca Médica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/STYLE.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom box-shadow mb-3" style="background-color: #7CABF9; position: fixed; top: 0; width: 100%; z-index: 1000;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Clínica Cristo Crucificado</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Paciente" asp-action="Index">Paciente</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Historial" asp-action="Index">Asignar Especialidad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Receta" asp-action="Index">Receta</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                Avanzado
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Rol" asp-action="Index">Rol</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="Index">Usuario</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Diagnostico" asp-action="Index">Diagnóstico</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Examen" asp-action="Index">Examen</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Medicamento" asp-action="Index">Medicamento</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Especialidad" asp-action="Index">Especialidad</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="RecetaMedicamento" asp-action="Index">RecetaMedicamento</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Sección de Usuario y Cerrar Sesión -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="navbar-text text-dark me-3 fw-bold">
                                ¡Bienvenido, @User.Identity.Name!
                            </span>
                        </li>
                        <li class="nav-item">
                            <form id="logout-form" asp-controller="Usuario" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-danger fw-bold" onclick="confirmLogout(event)">Cerrar Sesión</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts de JS -->
     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

    
