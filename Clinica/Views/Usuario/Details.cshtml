@model Clinica.Models.Usuario

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" href="~/css/formulario.css">
</head>
<h1>Detalle</h1>

    <h4>Usuario</h4>
    <hr />
    <div class="form-container">
    <div class="form-card">
        <div class="form-group">
            <label>Nombre:</label>
            <div class="form-value">
                @Html.DisplayFor(model => model.Nombre)
            </div>
        </div>
        <div class="form-group">
            <label>Apellido:</label>
            <div class="form-value">
                @Html.DisplayFor(model => model.Apellido)
            </div>
        </div>
        <div class="form-group">
            <label>Login:</label>
            <div class="form-value">
                @Html.DisplayFor(model => model.Login)
            </div>
        </div>
        <div class="form-group">
            <label>Password:</label>
            <div class="form-value">
                @Html.DisplayFor(model => model.Password)
            </div>
        </div>
        <div class="form-group">
            <label>Estatus:</label>
            <div class="form-value">
                @Html.DisplayFor(model => model.Estatus)
            </div>
        </div>
        <div class="form-group">
            <label>Fecha de Registro:</label>
            <div class="form-value">
                @Html.DisplayFor(model => model.FechaRegistro)
            </div>
        </div>
        

        <a asp-action="Edit" asp-route-id="@Model?.Id" button type="button" class="btn btn-info">Editar</a>
    <a asp-action="Index" button type="button" class="btn btn-secondary">Regresar</a>
    </div>
</div>
