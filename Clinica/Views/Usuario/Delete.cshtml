@model Clinica.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/CRUD.css">
</head>
<h1>Eliminar</h1>

<h4>¿Está seguro que desea eliminar este usuario?</h4>
<div class="form-container">
    <div class="form-group">
        <label>Nombre:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Nombre)
        </div>
    </div>
    <div class="form-group">
        <label>Apellido:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Apellido)
        </div>
    </div>
    <div class="form-group">
        <label>Login:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Login)
        </div>
    </div>
    <div class="form-group">
        <label>Password:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Password)
        </div>
    </div>
    <div class="form-group">
        <label>Estatus:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Estatus)
        </div>
    </div>
    <div class="form-group">
        <label>Fecha de Registro:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.FechaRegistro)
        </div>
    </div>
    <div class="form-group">
        <label>Rol:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.IdRolNavigation.Id)
        </div>
    </div>

    <form asp-action="Delete" style="text-align: center;">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </form>
</div>