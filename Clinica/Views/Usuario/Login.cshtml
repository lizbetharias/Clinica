@model Clinica.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
    <!-- Esto elimina el layout global para centrarnos solo en el login -->
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinica</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="login-container">
        <div class="login-box">
            <h2>Iniciar Sesión</h2>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="login">Login</label>
                    <input type="text" id="login" name="Login" class="form-control" placeholder="Ingresa tu login" required />
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="Password" class="form-control" placeholder="Ingresa tu contraseña" required />

                </div>
                <button type="submit" class="btn-login">Iniciar Sesión</button>
            </form>

            <footer>
                <p>&copy; 2024 Clinica Cristo Crucificado. Todos los derechos reservados.</p>
            </footer>
        </div>
    </div>
</body>
</html>
