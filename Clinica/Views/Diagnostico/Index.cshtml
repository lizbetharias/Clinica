@model IEnumerable<Clinica.Models.Diagnostico>

@{
    ViewData["Title"] = "Index";
}

<h1>Diagnostico</h1>

<!-- Mostrar mensaje de error -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" button class="btn btn-primary">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                   <div class="btn-group" role="group" aria-label="Basic outlined example">
                    <a asp-action="Edit" asp-route-id="@item.DiagnosticoId" button type="button" class="btn btn-success">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.DiagnosticoId" button type="button" class="btn btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.DiagnosticoId" button type="button" class="btn btn-danger">Eliminar</a>
                   </div>
            </td>
        </tr>
}
    </tbody>
</table>
