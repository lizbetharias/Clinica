@model Clinica.Models.Diagnostico

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" href="~/css/formulario.css">
</head>
<h1>Detalles</h1>

    <h4>Diagnostico</h4>
    <hr />
<div class="form-container">
    <div class="form-card">
    <div class="form-group">
        <label>Descripción:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Descripcion)
        </div>
    </div>
    <div class="form-group">
        <label>Observaciones:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Observaciones)
        </div>
    </div>

    <a asp-action="Edit" asp-route-id="@Model?.DiagnosticoId" button type="button" class="btn btn-info">Editar</a>
    <a asp-action="Index" button type="button" class="btn btn-secondary">Regresar</a>
    </div>
</div>
