@model Clinica.Models.Especialidad

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/formulario.css">
</head>

<h1>Eliminar</h1>

<h3>¿Está seguro que desea eliminar esta Especialidad?</h3>

<h4>Especialidad</h4>
<hr />

<div class="form-container">
    <div class="form-card">
        <div class="form-group">
            <label>Nombre:</label>
            <div class="form-value">
                @Html.DisplayFor(model => model.Nombre)
            </div>
        </div>

        <div class="form-group">
            <label>Detalle:</label>
            <div class="form-value">
                @Html.DisplayFor(model => model.Detalle)
            </div>
        </div>

        <form asp-action="Delete" style="text-align: center;">
            <input type="hidden" asp-for="EspecialidadId" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Regresar</a>
        </form>
    </div>
</div>
