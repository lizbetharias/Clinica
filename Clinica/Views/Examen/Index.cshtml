@model IEnumerable<Clinica.Models.Examen>

@{
    ViewData["Title"] = "Index";
}

<h1>Examen</h1>

<p>
    <a asp-action="Create" button class="btn btn-primary">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resultados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resultados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.PacienteId)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ExamenId" button type="button" class="btn btn-success">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ExamenId" button type="button" class="btn btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.ExamenId" button type="button" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
