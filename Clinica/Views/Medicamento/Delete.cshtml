@model Clinica.Models.Medicamento

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/formulario.css">
</head>
<h1>Eliminar</h1>

<h3>Seguro que quiere Eliminar este Medicamento?</h3>
    <h4>Medicamento</h4>
    <hr />
<div class="form-container">
    <div class="form-card">
    <div class="form-group">
        <label>Nombre:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Nombre)
        </div>
    </div>
    <div class="form-group">
        <label>Dosis:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Dosis)
        </div>
    </div>
    <div class="form-group">
        <label>Frecuencia:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Frecuencia)
        </div>
    </div>
    <div class="form-group">
        <label>Vía de Administración:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.ViaAdministracion)
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="MedicamentoId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </form>
    </div>
</div>
