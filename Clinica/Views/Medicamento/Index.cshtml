            <th>
                @Html.DisplayNameFor(model => model.ViaAdministracion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Frecuencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViaAdministracion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MedicamentoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.MedicamentoId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.MedicamentoId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
