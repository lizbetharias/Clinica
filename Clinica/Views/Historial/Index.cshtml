@model IEnumerable<Clinica.Models.Historial>

@{
    ViewData["Title"] = "Index";
}
<h1>Asignar Especialidad</h1>

<!-- Barra de búsqueda -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Buscar por fecha, nombre o especialidad..." />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>
<p>
    <a asp-action="Create" button class="btn btn-primary">Asignación de Especialidad</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {


            <tr>
                <td>@item.Fecha.ToShortDateString()</td>
                <td>@item.Paciente?.Nombre</td>
                <td>@item.Especialidad?.Nombre</td>
                <td>
                    <a asp-action="Create" asp-route-PacienteId="@item.PacienteId" class="btn btn-primary">
                        Asignar Especialidad
                    </a>
                </td>
            </tr>
