@model IEnumerable<Clinica.Models.Historial>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
        <a asp-action="Create">
            <button class="btn btn-primary">Nuevo Historial</button>
        </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.PacienteId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad.EspecialidadId)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.HistorialId" button type="button" class="btn btn-success">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.HistorialId" button type="button" class="btn btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.HistorialId" button type="button" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
