@model Clinica.Models.Historial

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/formulario.css">
</head>

<h1>Eliminar</h1>

<h4>¿Está seguro que desea eliminar este registro de asignación de especialidad?</h4>

<div class="form-container">
    <div class="form-card">
        <div class="form-group">
            <label>Fecha:</label>
            <div class="form-value">
                @Html.DisplayFor(model => model.Fecha)
            </div>
        </div>

        <div class="form-group">
            <label>Paciente:</label>
            <div class="form-value">
                @Html.DisplayFor(model => model.Paciente.Nombre)
            </div>
        </div>

        <div class="form-group">
            <label>Especialidad:</label>
            <div class="form-value">
                @Html.DisplayFor(model => model.Especialidad.Nombre)
            </div>
        </div>

        <form asp-action="Delete" style="text-align: center;">
            <input type="hidden" asp-for="HistorialId" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Regresar</a>
        </form>
    </div>
</div>
