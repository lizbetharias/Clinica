@model Clinica.Models.RecetaMedicamento

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link rel="stylesheet" href="~/css/CRUD.css">
</head>
<h1>Editar</h1>

<h4>RecetaMedicamento</h4>
<hr />
<div class="form-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- ID de receta medicamento (clave primaria, no editable) -->
            <input type="hidden" asp-for="recetamedicamentoID" />
            <!-- Selección de receta -->
            <div class="form-group">
                <label asp-for="RecetaId" class="control-label">Receta</label>
                <select asp-for="RecetaId" class="form-control" asp-items="ViewBag.RecetaId"></select>
            </div>

            <!-- Selección de medicamento -->
            <div class="form-group">
                <label asp-for="MedicamentoId" class="control-label">Medicamento</label>
                <select asp-for="MedicamentoId" class="form-control" asp-items="ViewBag.MedicamentoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrucciones" class="control-label"></label>
                <input asp-for="Instrucciones" class="form-control" />
                <span asp-validation-for="Instrucciones" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" button type="button" class="btn btn-secondary">Regresar</a>
            </div>
        </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
