@model Clinica.Models.RecetaMedicamento

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/CRUD.css">
</head>
<h1>Eliminar</h1>

<h3>Seguro que Quiere eliminar?</h3>

    <h4>RecetaMedicamento</h4>
    <hr />
<div class="form-container">
    <div class="form-group">
        <label>Cantidad:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Cantidad)
        </div>
    </div>
    <div class="form-group">
        <label>Instrucciones:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Instrucciones)
        </div>
    </div>
    <div class="form-group">
        <label>Medicamento:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Medicamento.MedicamentoId)
        </div>
    </div>
    <div class="form-group">
        <label>Receta:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Receta.RecetaId)
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="RecetaId" />
        <input type="hidden" asp-for="MedicamentoId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        <a asp-action="Index" button type="button" class="btn btn-secondary">Regresar</a>
    </form>
</div>
