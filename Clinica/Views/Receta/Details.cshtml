@model Clinica.Models.Receta

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" href="~/css/formulario.css">
</head>
<h1>Detalle</h1>

    <h4>Receta</h4>
    <hr />
<div class="form-container">
    <div class="form-card">
    <div class="form-group">
        <label>Fecha:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Fecha)
        </div>
    </div>
    <div class="form-group">
        <label>Diagnóstico:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Diagnostico.Descripcion)
        </div>
    </div>
    <div class="form-group">
        <label>Usuario:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.IdUsuarioNavigation.Nombre)
        </div>
    </div>
    <div class="form-group">
        <label>Paciente:</label>
        <div class="form-value">
            @Html.DisplayFor(model => model.Paciente.Nombre)
        </div>
    </div>
    <a asp-action="Edit" asp-route-id="@Model?.RecetaId" button type="button" class="btn btn-info">Editar</a>
    <a asp-action="Index" button type="button" class="btn btn-secondary">Regresar</a>
    </div>
</div>
