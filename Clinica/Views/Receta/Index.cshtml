@model IEnumerable<Clinica.Models.Receta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnostico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnostico.DiagnosticoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.PacienteId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RecetaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RecetaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RecetaId">Delete</a>

                    <!-- Botón para imprimir la receta -->
                    <a asp-controller="Receta" asp-action="RecetaView" class="btn btn-primary">
                        Imprimir Receta
                    </a>
            </td>
              

        </tr>
}
    </tbody>
</table>
