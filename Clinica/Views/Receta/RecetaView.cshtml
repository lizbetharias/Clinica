@model Clinica.Models.Receta

@{
    ViewData["Title"] = "Gestión de Recetas";
}

<h1>Clinica Cristo Crusificado</h1>


<form asp-controller="Receta" asp-action="RecetaView">

  <div class="card" style="width: 18rem;">
  <ul class="list-group list-group-flush">
            
      <li>Fecha: @Model.Fecha.ToString("dd/MM/yyyy HH:mm:ss")</li>
            
      <li>Nombre: @Model.Paciente.Nombre</li>
            
      <li>Apellido: @Model.Paciente.Apellido</li>
  </ul>
</div>


    <div class="col-md-8">
        <h4>Listado de Recetas</h4>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Fecha</th>
                    <th>Paciente</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var receta in Model.RecetaMedicamento)
                {
                    <tr>
                        <td>@receta.Medicamento.Nombre</td>
                        <td>@receta.Cantidad</td>
                        <td>@receta.Instrucciones</td>
                        <td>
                            <a class="btn btn-primary">
                                Imprimir PDF
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>

    <a asp-action="Index">Volver al listado</a>
</div>
 </form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
